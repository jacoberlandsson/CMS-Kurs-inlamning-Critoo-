@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.NewsPageArticleDetails>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Services;
@using Umbraco.Cms.Core.Models.PublishedContent;
@inject IUserService UserService;
@{
    Layout = "LayoutWithBreadcrumb.cshtml";
    var userService = UserService;
    
    var image = Model.Value<IPublishedContent>("articleImage");
}

<section class="news-details-section">

    <div class="news-details-heading">
      <h2>@Model.Name</h2>
    </div>
    

<div class="left-and-right-wrapper-details">
    <div class="full-article">
        
        <div class="details-info-wrapper">
            <span class="details-info">@Model.CreateDate.ToString("MMM dd, yyy")</span>
            <span class="details-info">@Model.Value("articleCategory")</span>
            <span class="details-info">@Model.CreatorName(UserService)</span>
        </div>

        <div class="news-full-article">
            <img
              class="news-details-image"
              src="@image.Url()"
              alt="Article image"
            />
          
           
            <p>
              @Model.Value("articleText")
            </p>
            <div class="news-details-tags-wrapper">
                @foreach(var tag in Model.Value<IEnumerable<string>>("articleTags"))
                {
                    <span class="news-details-tags">@tag</span>
                }
               
            </div>
          </div>
    </div>

      <div class="news-details-right">
        <label></label>
        <input class="news-details-input" placeholder=" Type to search..." />
    <div class="navigate-to-other-articles">
    
        <div class="recent-posts">
            <h3>Recent Posts</h3>
              <div class="news-details-recent-article">
                <h4 class="recent-h4">How To Blow Through Capital At An Incredible Rate</h4>
                <span class="recent-span">Jan 14, 2020</span>
              </div>

              <div class="news-details-recent-article">
                <h4 class="recent-h4">Design Studios That Everyone Should Know About?</h4>
                <span class="recent-span">Jan 14, 2020</span>
              </div>

              <div class="news-details-recent-article">
                <h4 class="recent-h4">How Did We Get 1M+ Visitors In 30 Days Without Anything!</h4>
                <span class="recent-span">Jan 14, 2020</span>
              </div>

              <div class="news-details-recent-article">
                <h4 class="recent-h4">Figma On Figma: How We Built Our Website Design Systems</h4>
                <span class="recent-span">Jan 14, 2020</span>
              </div>

        </div>

        <div class="categories">
            <h3>Categories</h3>
            <div class="news-details-categories">
              <h4 class="news-details-categories-h4">Technology</h4>
              <span class="news-details-categories-span"> - 20 Posts</span>
            </div>
            <div class="news-details-categories">
              <h4  class="news-details-categories-h4">Freelancing</h4>
              <span class="news-details-categories-span"> - 17 Posts</span>
            </div>
            <div class="news-details-categories">
              <h4 class="news-details-categories-h4">Writing</h4>
              <span class="news-details-categories-span"> - 11 Posts</span>
            </div>
            <div class="news-details-categories">
              <h4 class="news-details-categories-h4">Marketing</h4>
              <span class="news-details-categories-span"> - 14 Posts</span>
            </div>
            <div class="news-details-categories">
              <h4 class="news-details-categories-h4">Business</h4>
              <span class="news-details-categories-span"> - 31 Posts</span>
            </div>
            <div class="news-details-categories">
              <h4 class="news-details-categories-h4">Education</h4>
              <span class="news-details-categories-span"> - 10 Posts</span>
            </div>
        </div>
      </div>
        

    </div>
  </div>
</section>
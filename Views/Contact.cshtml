
@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Contact>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "LayoutWithBreadcrumb.cshtml";

    var contactForm = new Critoo.Models.ContactForm();
}

<section class="contact-point-section">
      <div class="contact-wrapper">
       <div class="contact-point">
        <div class="contact-point-icon"><i class="fa-solid fa-location-dot contact-i"></i></div>
        <div class="info-contact-point">
            <h4>Visit us</h4>
        <p class="contact-point-p">Sveavägen 31</p>
        <p class="contact-point-p">111 34 STOCKHOLM</p>
        </div>
        
       </div>

       <div class="contact-point">
        <div class="contact-point-icon"><i class="fa-solid fa-phone-volume contact-i"></i></div>
        <div class="info-contact-point">
        <h4>Call us</h4>
        <p  class="contact-point-p">+46 (8) 121 470 50</p>
        <p class="contact-point-p">+46 (8) 121 470 51</p>
        </div>
       </div>

       <div class="contact-point">
        <div class="contact-point-icon"><i class="fa-solid fa-envelope contact-i"></i></div>
        <div class="info-contact-point">
        <h4>Email us</h4>
        <p class="contact-point-p">info@crito.com</p>
        <p class="contact-point-p">support@crito.com</p>
        </div>
       </div>
      </div>
    </section>
    
    <section class="form-section-contact">
      <div class="form-wrapper">
        <h3 class="form-heading">Leave us a message for any information.</h3>
        
        <div class="form-container">
        @using (Html.BeginUmbracoForm("Index", "Contact", FormMethod.Post))
        {
            <div asp-validation-summary="All"> </div>

            <input asp-for="@contactForm.Name" class="input-contact" type="text" id="name" name="name" placeholder="Name">

            <br>
            <input asp-for="@contactForm.Email" class="input-contact" type="email" id="email" name="email" placeholder="Email">

            <br>
            <textarea asp-for="@contactForm.Message" class="textarea-contact" type="text" id="message" name="message" placeholder="Message"> 

                </textarea>
            <button type="submit" class="contact-form-button">
                Send Message
            </button>

           
        }

          </div>
           
          
        
      </div>
    
    </section>
    
